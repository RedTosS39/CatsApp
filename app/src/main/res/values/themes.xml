<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PhonesApp1212" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/recycler_background</item>
        <item name="colorPrimaryVariant">@color/recycler_background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/purple_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/recycler_background</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.App.SplashScreenTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splash_background_Color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/cat</item>
        <item name="postSplashScreenTheme">@style/Theme.PhonesApp1212</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="roundingImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
    </style>

</resources>